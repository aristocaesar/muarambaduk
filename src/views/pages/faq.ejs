<div class="flex justify-center py-8 md:py-24">
    <div class="container flex justify-center text-cod-gray-950 text-sm md:text-base">
        
        <div id="faq-items" class="flex flex-col space-y-5 w-full mb-5">
            <% for(let index = 0; faq.length > index; index++) { %>
            <div id="faq-items-<%= index %>" class="border-b-[1px] border-cod-gray-300 cursor-pointer" onclick="faq(this.id)">
                <div class="flex py-5 justify-between items-center">
                    <h6 class="font-semibold w-10/12">
                        <%= faq[index].title %>
                    </h6>
                    <div class="w-2/12 flex justify-end">
                        <svg id="show-faq-items-<%= index %>" class="<%= index == 0 ? 'hidden' : 'block' %>" fill="#000000" width="30px" height="30px" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
                            <path d="M9,17h6v6a1,1,0,0,0,2,0V17h6a1,1,0,0,0,0-2H17V9a1,1,0,0,0-2,0v6H9a1,1,0,0,0,0,2Z"/>
                        </svg>
                        <svg id="hide-faq-items-<%= index %>" class="<%= index == 0 ? 'block' : 'hidden' %>" width="30px" height="30px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M7 12L17 12" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                </div>
                <p id="description-faq-items-<%= index %>" class="text-cod-gray-300 mb-5 <%= index == 0 ? 'block' : 'hidden' %>">
                    <%= faq[index].description %>
                </p>
            </div>
            <% } %> 
        </div>

    </div>
</div>