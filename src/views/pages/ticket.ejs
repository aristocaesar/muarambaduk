<div class="flex justify-center py-8 md:py-24">
    <div class="container flex flex-col justify-center text-cod-gray-950">

        <div class="flex w-full">
            <button id="btn-tourist" class="py-5 font-semibold bg-denim-600 hover:bg-denim-700 text-white-50 w-full rounded-l-sm" onclick="tickets(this)">
                Wisatawan
            </button>
            <button id="btn-transport" class="py-5 font-semibold bg-cod-gray-300 hover:bg-cod-gray-400 text-white-50 w-full rounded-r-sm" onclick="tickets(this)">
                Kendaraan
            </button>
        </div>

        <div class="flex flex-col">
            <div id="tourist" class="grid grid-cols-1 md:grid-cols-2 w-full my-10 space-y-5 md:space-y-0">
                <% for(let index = 0; tickets.length > index; index++) { %>
                    <% if(tickets[index].category == 'tourist') { %>
                        <div class="w-full">
                            <h2 class="font-semibold mb-5"><%= tickets[index].title %></h2>
                            <p class="mb-2">Hari Biasa : <%= tickets[index].normal_day %></p>
                            <p>Hari Akhir Pekan / Libur : <%= tickets[index].weekend_day %></p>
                        </div>
                    <% } %>
                <% } %>
            </div>
            <div id="transport" class="hidden grid-cols-1 md:grid-cols-2 w-full my-10 space-y-5 md:space-y-0">
                <% for(let index = 0; tickets.length > index; index++) { %>
                    <% if(tickets[index].category == 'transport') { %>
                        <div class="w-full">
                            <h2 class="font-semibold mb-5"><%= tickets[index].title %></h2>
                            <p class="mb-2">Hari Biasa : <%= tickets[index].normal_day %></p>
                            <p>Hari Akhir Pekan / Libur : <%= tickets[index].weekend_day %></p>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>

    </div>
</div>